{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "System": "Warning"
      }
    }
  },
  "AllowedHosts": "*",
  "FeatureManagement": {
    "UseKafka": false,
    "UseElastic": false,
    "UseRedis": false,
    "UseOpenTelemetry": false,
    "UseSwagger": true
  },
  "JwtOptions": {
    "Issuer": "TemplateIssuer",
    "Audience": "TemplateAudience",
    "SecurityKey": "Enaz32KarakterSuperSecretKey12345",
    "TokenExpiration": "5",
    "RefreshTokenExpiration": "1440"
  },
  "Redis": {
    "ConnectionString": "localhost:6379"
  },
  "Kafka": {
    "BootstrapServers": "kafka:9092",
    "Topic": "demo-topic"
  },
  "ElasticSearchConfiguration": {
    "Uri": "http://elasticsearch:9200",
    "Index": "logs-{0:yyyy.MM.dd}"
  },
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 60
      }
    ]
  },
  "LocalScopeKey": "TemplateApiScopeCacheKey",
  "ConnectionStrings": {
    "DefaultConnection": "Server=ERDINCDEGIRMENC;Database=TIGER3;User Id=sa;Password=root;"
  }
}
